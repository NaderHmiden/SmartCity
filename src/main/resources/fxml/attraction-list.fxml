<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.smartcity123.Controller.Aziz.AttractionController"
      prefWidth="700" prefHeight="500" style="-fx-padding:20; -fx-background-color: #f5f5f5;">

    <!-- Titre -->
    <Label text="Liste des Attractions"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- Barre de recherche et filtre catégorie -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher par nom..." prefWidth="200"/>
        <ComboBox fx:id="categoryFilter" promptText="Filtrer par catégorie" prefWidth="180"/>
        <Button text="Filtrer"  style="-fx-font-size:14px;"/>
    </HBox>

    <!-- Table des attractions -->
    <TableView fx:id="attractionTable" prefHeight="300" prefWidth="650" style="-fx-border-color: #ccc; -fx-border-width: 1px;">
        <columns>
            <TableColumn fx:id="colName" prefWidth="200" text="Nom" />
            <TableColumn fx:id="colCategory" prefWidth="150" text="Catégorie" />
            <TableColumn fx:id="colPrice" prefWidth="100" text="Prix (€)" />
        </columns>
    </TableView>

    <!-- Boutons d'action -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Ajouter" onAction="#goToAttractionAdd"
                style="-fx-font-size:14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Modifier" 
                style="-fx-font-size:14px; -fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Supprimer" 
                onAction="#deleteAttraction" 
                style="-fx-font-size:14px; -fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button text="Détails" 
                style="-fx-font-size:14px; -fx-background-color: #FFC107; -fx-text-fill: white;"/>
    </HBox>

</VBox>
