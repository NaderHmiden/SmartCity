<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.smartcity123.Controller.Aziz.AttractionAddController"
      prefWidth="400" prefHeight="450" style="-fx-padding:20;">

    <Label text="Ajouter une Attraction" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="descriptionField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Catégorie:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="categoryField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Prix:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Adresse:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Téléphone:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Latitude:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="latitudeField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Longitude:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <TextField fx:id="longitudeField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" onAction="#addAttraction" style="-fx-font-size:14px;"/>
        <Button text="Annuler" onAction="#cancel" style="-fx-font-size:14px;"/>
    </HBox>

</VBox>
