<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.smartcity123.Controller.Nader.HotelControler"
      spacing="10" alignment="TOP_CENTER" prefWidth="700" prefHeight="450" style="-fx-padding:20;">

    <!-- Barre de recherche et boutons -->
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Rechercher par nom"/>
        <ComboBox fx:id="categoryFilter" promptText="Filtrer par catégorie"/>
        <Button text="Filtrer" onAction="#filter"/>
        <Button text="Ajouter" onAction="#addHotel"/>
        <Button text="Modifier" onAction="#editHotel"/>
        <Button text="Supprimer" onAction="#deleteHotel"/>
        <Button text="Détails" onAction="#showDetails"/>
    </HBox>

    <!-- Table des hôtels -->
    <TableView fx:id="hotelTable" prefHeight="350" prefWidth="680">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colName" text="Nom"/>
            <TableColumn fx:id="colCategory" text="Catégorie"/>
            <TableColumn fx:id="colPrice" text="Prix"/>
            <TableColumn fx:id="colCity" text="Ville"/>
        </columns>
    </TableView>
</VBox>
