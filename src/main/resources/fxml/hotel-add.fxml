<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.smartcity123.Controller.Nader.HotelAddController"
            fitToWidth="true">
    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding:20;" prefWidth="400">

        <Label text="Informations générales" style="-fx-font-weight:bold; -fx-font-size:14;"/>
        <GridPane hgap="10" vgap="10">
            <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Téléphone:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Ville:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="cityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Catégorie:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="categoryField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Prix min:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="minPriceField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Prix max:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="maxPriceField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- Pour Resort -->
        <VBox spacing="5" fx:id="resortBox">
            <Label text="Amenities (Resort)" style="-fx-font-weight:bold;"/>
            <TextArea fx:id="amenitiesArea" promptText="Ex: Spa, piscine, restaurant..."/>
            <HBox spacing="10">
                <CheckBox fx:id="poolBox" text="Piscine"/>
                <CheckBox fx:id="spaBox" text="Spa"/>
            </HBox>
        </VBox>

        <!-- Pour BusinessHotel -->
        <VBox spacing="5" fx:id="businessBox">
            <Label text="Chambres (BusinessHotel)" style="-fx-font-weight:bold;"/>
            <TextField fx:id="roomsField" promptText="Nombre de chambres"/>
            <CheckBox fx:id="meetingRoomBox" text="Salle de réunion"/>
        </VBox>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Ajouter" onAction="#addHotel"/>
            <Button text="Annuler" onAction="#close"/>
        </HBox>
    </VBox>
</ScrollPane>
