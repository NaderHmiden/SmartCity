<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.smartcity123.Controller.Mazen.RestaurantController"
      prefWidth="700" prefHeight="500"
      style="-fx-padding:20; -fx-background-color: #f5f5f5;">

    <Label text="Liste des Restaurants"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <!-- Zone de recherche et filtrage -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher par nom..." prefWidth="200"/>
        <ComboBox fx:id="cuisineFilter" promptText="Filtrer par cuisine" prefWidth="180"/>
        <Button text="Filtrer" style="-fx-font-size:14px;"/>
    </HBox>

    <!-- Tableau -->
    <TableView fx:id="restaurantTable" prefHeight="300" prefWidth="650"
               style="-fx-border-color:#ccc; -fx-border-width:1;">
        <columns>
            <TableColumn fx:id="colName" prefWidth="200" text="Nom"/>
            <TableColumn fx:id="colCuisine" prefWidth="150" text="Cuisine"/>
            <TableColumn fx:id="colPrice" prefWidth="100" text="Prix (€)"/>
        </columns>
    </TableView>

    <!-- Boutons -->
    <HBox alignment="CENTER" spacing="15">
        <Button text="Ajouter"
                fx:id="btnAdd"
                onAction="#addRestaurant"
                style="-fx-font-size:14px; -fx-background-color:#4CAF50; -fx-text-fill:white;"/>

        <Button text="Modifier"
                fx:id="btnEdit"
                
                style="-fx-font-size:14px; -fx-background-color:#2196F3; -fx-text-fill:white;"/>

        <Button text="Supprimer"
                fx:id="btnDelete"
                onAction="#deleteRestaurant" 
                style="-fx-font-size:14px; -fx-background-color:#f44336; -fx-text-fill:white;"/>

        <Button text="Détails"
                fx:id="btnDetails"
                
                style="-fx-font-size:14px; -fx-background-color:#FFC107; -fx-text-fill:white;"/>
    </HBox>

</VBox>
