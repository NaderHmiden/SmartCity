<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_CENTER" prefHeight="400" prefWidth="600" spacing="15" style="-fx-padding:20;" type="VBox" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.smartcity123.View.Attraction.listController">

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Liste des Attractions" />

    <TableView fx:id="attractionTable" prefHeight="250" prefWidth="550">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID" />
            <TableColumn fx:id="colName" prefWidth="150" text="Nom" />
            <TableColumn fx:id="colCategory" prefWidth="120" text="Catégorie" />
            <TableColumn fx:id="colPrice" prefWidth="80" text="Prix" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="btnAdd" style="-fx-font-size: 14px;" text="Ajouter" />
        <Button fx:id="btnEdit" style="-fx-font-size: 14px;" text="Modifier" />
        <Button fx:id="btnDelete" style="-fx-font-size: 14px;" text="Supprimer" />
        <Button fx:id="btnDetails" style="-fx-font-size: 14px;" text="Détails" />
        <Button fx:id="btnBack" style="-fx-font-size: 14px;" text="Retour" />
    </HBox>

</fx:root>
