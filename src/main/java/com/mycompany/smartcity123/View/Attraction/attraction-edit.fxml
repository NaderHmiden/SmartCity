<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="400" style="-fx-padding:20;">

    <Label text="Modifier l'Attraction" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Catégorie:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="categoryField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Prix:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Adresse:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Coordonnées:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="coordinatesField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Sauvegarder" fx:id="btnSave" style="-fx-font-size: 14px;"/>
        <Button text="Annuler" fx:id="btnCancel" style="-fx-font-size: 14px;"/>
    </HBox>

</VBox>
