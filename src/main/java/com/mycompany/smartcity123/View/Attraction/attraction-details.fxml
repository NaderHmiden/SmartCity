<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="400" style="-fx-padding:20;">

    <Label text="Détails de l'Attraction" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Catégorie:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="categoryLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Prix:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="priceLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Adresse:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="addressLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Coordonnées:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="coordinatesLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="Avis:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <VBox fx:id="reviewsBox" spacing="5" style="-fx-border-color: gray; -fx-padding: 5; -fx-background-color: #f5f5f5;"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Fermer" fx:id="btnClose" style="-fx-font-size: 14px;"/>
    </HBox>

</VBox>
