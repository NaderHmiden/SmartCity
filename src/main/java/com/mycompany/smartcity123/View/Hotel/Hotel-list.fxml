<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" prefWidth="600" prefHeight="400" style="-fx-padding:20;">

    <Label text="Liste des Hôtels" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TableView fx:id="hotelTable" prefHeight="250" prefWidth="550">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="colCity" text="Ville" prefWidth="120"/>
            <TableColumn fx:id="colStars" text="Étoiles" prefWidth="80"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" fx:id="btnAdd" style="-fx-font-size: 14px;"/>
        <Button text="Modifier" fx:id="btnEdit" style="-fx-font-size: 14px;"/>
        <Button text="Supprimer" fx:id="btnDelete" style="-fx-font-size: 14px;"/>
        <Button text="Détails" fx:id="btnDetails" style="-fx-font-size: 14px;"/>
        <Button text="Retour" fx:id="btnBack" style="-fx-font-size: 14px;"/>
    </HBox>

</VBox>
