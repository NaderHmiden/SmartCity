<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="300" style="-fx-padding:20;">

    <Label text="Ajouter un Hôtel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Nom de l'hôtel"/>
    <TextField fx:id="cityField" promptText="Ville"/>
    <TextField fx:id="starsField" promptText="Étoiles (1-5)"/>
    <TextField fx:id="addressField" promptText="Adresse"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Enregistrer" fx:id="btnSave"/>
        <Button text="Annuler" fx:id="btnCancel"/>
    </HBox>

</VBox>
