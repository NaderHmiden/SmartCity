<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="350" style="-fx-padding:20;">

    <Label text="Modifier Restaurant" style="-fx-font-size:24px; -fx-font-weight:bold;"/>

    <TextField fx:id="nameField" promptText="Nom"/>
    <TextField fx:id="cuisineField" promptText="Cuisine"/>
    <TextField fx:id="priceMinField" promptText="Prix min"/>
    <TextField fx:id="priceMaxField" promptText="Prix max"/>
    <TextField fx:id="cityField" promptText="Ville"/>
    <TextField fx:id="addressField" promptText="Adresse"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Enregistrer" fx:id="btnUpdate"/>
        <Button text="Annuler" fx:id="btnCancel"/>
    </HBox>
</VBox>
