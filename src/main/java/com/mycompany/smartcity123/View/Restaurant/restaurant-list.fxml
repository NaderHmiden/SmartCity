<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" prefWidth="600" prefHeight="400" style="-fx-padding:20;">

    <Label text="Liste des Restaurants" style="-fx-font-size:24px; -fx-font-weight:bold;"/>

    <TableView fx:id="restaurantTable" prefHeight="250" prefWidth="550">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="colCuisine" text="Cuisine" prefWidth="120"/>
            <TableColumn fx:id="colPrice" text="Prix" prefWidth="80"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" fx:id="btnAdd"/>
        <Button text="Modifier" fx:id="btnEdit"/>
        <Button text="Supprimer" fx:id="btnDelete"/>
        <Button text="DÃ©tails" fx:id="btnDetails"/>
        <Button text="Retour" fx:id="btnBack"/>
    </HBox>
</VBox>
